<!DOCTYPE html>
<html lang="pt-br" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserva de Chromebooks</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"/>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>
    <main class="container">
        <header class="logo-header">
            <img src="/images/logo.png" alt="Logo do Colégio">
            <h1>Sistema de Reservas</h1>
            <div style="margin-left: auto; text-align: right;">
                <p style="margin: 0;">Bem-vindo(a), <%= user.nome.split(' ')[0] %></p>
                
                <!-- MUDANÇA: Agora o link aparece para 'admin' E para 'operacional' -->
                <% if (user.role === 'admin' || user.role === 'operacional') { %>
                    <a href="/admin" style="margin-right: 10px;">Painel de Gestão</a>
                <% } %>
                
                <a href="/logout" role="button" class="secondary outline" style="padding: 5px 10px; margin-top: 5px;">Sair</a>
            </div>
        </header>
    
        <% if (typeof erro !== 'undefined' && erro) { %><article style="background-color: #ffebee; border-color: #e57373;"><p style="color: #c62828;"><%= erro %></p></article><% } %>
        <% if (typeof sucesso !== 'undefined' && sucesso) { %><article style="background-color: #e8f5e9; border-color: #81c784;"><p style="color: #2e7d32;"><%= sucesso %></p></article><% } %>
        
        <h2>Disponibilidade por Carrinho</h2>
        <div style="overflow-x: auto;">
            <table>
                <thead>
                    <tr><th>Carrinho</th><th>Localização</th><th>Capacidade Total</th></tr>
                </thead>
                <tbody>
                    <% carrinhos.forEach(c => { %>
                        <tr><td><%= c.nome %></td><td><%= c.localizacao %></td><td><%= c.capacidade %></td></tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <hr>

        <h2>Fazer uma Nova Reserva</h2>
        <form action="/reservar" method="POST">
            <label for="carrinho">De qual carrinho quer reservar?</label>
            <select id="carrinho" name="carrinho_id" required>
                <option value="" disabled selected>-- Escolha um carrinho --</option>
                <% carrinhos.forEach(c => { %>
                    <option value="<%= c.id %>"><%= c.nome %> - <%= c.localizacao %></option>
                <% }) %>
            </select>
            <label for="quantidade">Quantidade:</label>
            <input type="number" id="quantidade" name="quantidade" required min="1">
            <div class="grid">
                <label for="retirada">Data e Hora de Retirada:
                    <input type="text" id="retirada" name="data_retirada" required placeholder="Selecione data e hora...">
                </label>
                <label for="devolucao">Data e Hora de Devolução:
                    <input type="text" id="devolucao" name="data_devolucao" required placeholder="Selecione data e hora...">
                </label>
            </div>
            <label for="sala">Para qual sala?</label>
            <input type="text" id="sala" name="sala" required>
            <p><b>Disponibilidade para este horário: <span id="disponibilidade-resultado">--</span></b></p>
            <button type="submit">Fazer Reserva</button>
        </form>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/pt.js"></script>
    <script src="/front-end.js"></script>
</body>
</html>
